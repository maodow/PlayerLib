<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_10" >

    <ImageView
        android:id="@+id/icon_img2"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_2"
        android:src="@mipmap/sdk_bl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/icon_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/icon_img2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/player_ratio_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_28"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_img2">

        <LinearLayout
            android:id="@+id/player_quan_ls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8">

            <com.huan.player.ui.SwitchImageView
                android:id="@+id/play_text_ratio_i"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:visibility="gone"
                app:def="@mipmap/sdk_skip_head"
                app:sel="@mipmap/sdk_skip_head_focus" />

            <TextView
                android:id="@+id/play_text_ratio_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="全屏拉伸"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_y_s_b_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8">

            <com.huan.player.ui.SwitchImageView
                android:id="@+id/play_text_ratio_i1"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:visibility="gone"
                app:def="@mipmap/sdk_skip_head"
                app:sel="@mipmap/sdk_skip_head_focus" />

            <TextView
                android:id="@+id/play_text_ratio_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="原始比例"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>