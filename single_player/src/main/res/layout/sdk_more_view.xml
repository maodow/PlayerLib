<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_5"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_img0"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_12"
        android:src="@mipmap/sdk_more"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/icon_name0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintLeft_toRightOf="@+id/icon_img0"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/player_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_img0">

        <TextView
            android:id="@+id/player_more_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_24"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="下一集"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:id="@+id/player_more_skip_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_8">

            <com.huan.player.ui.SwitchImageView
                android:id="@+id/img_control_skip_head"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:visibility="gone"
                app:def="@mipmap/sdk_skip_head"
                app:sel="@mipmap/sdk_skip_head_focus" />

            <TextView
                android:id="@+id/text_control_skip_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:textColor="@android:color/white"
                android:text="跳过片头片尾"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>


        <TextView
            android:id="@+id/player_more_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_24"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="首页"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/player_more_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_24"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="历史记录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/player_more_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_24"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="我的收藏"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11" />


        <TextView
            android:id="@+id/player_more_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_9"
            android:background="@drawable/skin_btn3"
            android:clickable="true"
            android:focusable="true"
            android:paddingStart="@dimen/dp_24"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_8"
            android:text="搜索"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>